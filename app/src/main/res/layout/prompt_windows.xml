<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widows">

    <TextView
        android:id="@+id/windows_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="分享给朋友"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/windows_head">

        <TableRow android:gravity="center">

            <RelativeLayout>

                <ImageView
                    android:id="@+id/tu1"
                    style="@style/windows_color_img"
                    android:src="@drawable/share_wx_pyq_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="微信朋友圈" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView

                    style="@style/windows_color_img"
                    android:src="@drawable/share_wx_py_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="微信好友" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    style="@style/windows_color_img"
                    android:src="@drawable/share_qq_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="QQ好友" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    style="@style/windows_color_img"
                    android:src="@drawable/share_qzone_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="QQ空间" />
            </RelativeLayout>
        </TableRow>

        <TableRow android:gravity="center">

            <RelativeLayout>

                <ImageView
                    style="@style/windows_color_img"
                    android:src="@drawable/share_sina_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="新浪微博" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    style="@style/windows_color_img"
                    android:src="@drawable/share_qiuyou_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="糗友/群" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView
                    style="@style/windows_color_img"
                    android:src="@drawable/share_qyq_s" />

                <TextView
                    style="@style/windows_color_text"
                    android:text="糗友圈" />
            </RelativeLayout>

            <RelativeLayout>

                <ImageView style="@style/windows_color_img" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout">

        <RelativeLayout
            style="@style/windows_img_layout"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/tu2"
                style="@style/windows_img"
                android:src="@drawable/share_copy_s" />

            <TextView
                style="@style/windows_text"
                android:text="复制" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/windows_img_layout"
            android:layout_centerHorizontal="true">

            <ImageView
                style="@style/windows_img"
                android:src="@drawable/share_collect_s" />

            <TextView
                style="@style/windows_text"
                android:text="收藏" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/windows_img_layout"
            android:layout_alignParentRight="true">

            <ImageView
                style="@style/windows_img"
                android:src="@drawable/share_report_s" />

            <TextView
                style="@style/windows_text"
                android:text="举报" />
        </RelativeLayout>

        <View
            android:id="@+id/fengexian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/tabTextColor" />
    </RelativeLayout>
</RelativeLayout>